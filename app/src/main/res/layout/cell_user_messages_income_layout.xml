<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/dialogRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:foreground="?attr/selectableItemBackground">


    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_outcoming">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="Tes aneasddasdad" />

        <TextView
            android:id="@+id/tv_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_dark"
            android:textSize="10sp"
            android:layout_below="@+id/tv_message"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:30"
            android:textColor="@color/gray_dark"
            android:layout_toRightOf="@+id/tv_sent"
            android:textSize="10sp"
            android:layout_below="@+id/tv_message"
            android:visibility="gone"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_post_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_outcoming"
        >

        <RelativeLayout
            android:id="@+id/rl_user_img"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_user_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/cv_user_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:text="albi" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white_five"
                android:src="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_post_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"

            android:layout_centerInParent="true"
            android:layout_below="@+id/rl_user_img">
            <ImageView
                android:id="@+id/iv_post_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorAccent"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_message_post"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque posuere lectus eu leo commodo molestie. Donec dictum, urna ut tincidunt pretium, nisl massa egestas erat, id faucibus metus neque eu nisi."
            android:layout_below="@+id/cv_post_image"/>
    </RelativeLayout>


</RelativeLayout>
